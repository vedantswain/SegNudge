<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.vedant.segnudge.WakeActivity"
    tools:deviceIds="wear">

    <TextView
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:textColor="@android:color/white"
        app:layout_box="all" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        app:layout_box="all"
        android:background="@color/black_86p">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:layout_box="all"
            android:textColor="@android:color/secondary_text_dark" />

        <TextView
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView"
            android:textColor="@color/white" />

        <ImageView
            android:src="@drawable/ic_right_swipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_toEndOf="@+id/textView"
            android:layout_alignTop="@+id/textView" />

        <TextView
            android:text="Yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:id="@+id/text2View"
            android:textColor="@color/white" />

        <ImageView
            android:src="@drawable/ic_left_swipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image2View"
            android:layout_toStartOf="@+id/text2View"
            android:layout_alignTop="@+id/text2View" />

    </RelativeLayout>

    <View
        android:id="@+id/rectangleNo"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@drawable/rect_no"
        app:layout_box="left"/>

    <View
        android:id="@+id/rectangleYes"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@drawable/rect_yes"
        android:layout_gravity="right"
        app:layout_box="right"/>

</android.support.wearable.view.BoxInsetLayout>
